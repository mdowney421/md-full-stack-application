<!DOCTYPE html>
<html lang="en">
    <%- include ('./partials/head.ejs') %>
    <body>
        <%- include ('./partials/nav.ejs') %>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Welcome to your dashboard!</h1>
            </div>
        </div>
        <% let numOfWorkouts = 0 %>
        <% let totalMinutes = 0 %>
        <% let totalCalories = 0 %>
        <% for (let i = 0; i < workouts.length; i++) { %>
            <% numOfWorkouts++ %>
            <% totalMinutes += workouts[i].duration %>
            <% totalCalories += workouts[i].caloriesBurned %>
        <% } %>
        <h1>This week:</h1>
        <div class="row my-5">
            <div class="col-4 d-flex align-items-stretch">
                <div class="card text-center border-0">
                    <img class="card-img-top" src="/media/number-sign.png">
                    <div class="card-body">
                        <h5 class="card-title text-primary"><%=numOfWorkouts%></h5>
                        <p class="card-text">workouts</p>
                    </div>
                </div>
            </div>
            <div class="col-4 d-flex align-items-stretch">
                <div class="card text-center border-0">
                    <img class="card-img-top" src="/media/stopwatch.png">
                    <div class="card-body">
                        <h5 class="card-title text-success"><%=totalMinutes%></h5>
                        <p class="card-text">minutes spent working out</p>
                    </div>
                </div>
            </div>
            <div class="col-4 d-flex align-items-stretch">
                <div class="card text-center border-0">
                    <img class="card-img-top" src="/media/flame.png">
                    <div class="card-body">
                        <h5 class="card-title text-warning"><%=totalCalories%></h5>
                        <p class="card-text">calories burned</p>
                    </div>
                </div>
            </div>
        </div>
        <%- include ('./partials/footer.ejs') %>
    </body>
</html>