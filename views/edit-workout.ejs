<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head.ejs') %>
<body>
    <%- include ('./partials/nav.ejs') %>
    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">Your workout from <%=workout.date.toLocaleDateString('en-us', { weekday:"long", year:"numeric", month:"short", day:"numeric"})%></h1>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-8 mx-auto">
            <form action="/workouts/<%=workout.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="dateInput">Date</label>
                    <input name="date" class="form-control" id="dateInput" value="<%=workout.date.toLocaleDateString('en-us', {year:"numeric", month:"numeric", day:"numeric"})%>" required>
                </div>
                <div class="form-group">
                    <label for="workoutTypeInput">What type of workout did you do?</label>
                    <select name="type" class="form-control" id="workoutTypeInput" value="<%=workout.type%>" required>
                        <option selected disabled></option>
                        <option>Running</option>
                        <option>Cycling</option>
                        <option>Strength Training</option>
                        <option>Swimming</option>
                        <option>HIIT</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="durationInput">How long did you work out (in minutes)?</label>
                    <input type="number" name="duration" class="form-control" id="durationInput" value="<%=workout.duration%>" required>
                </div>
                <div class="form-group">
                    <label for="caloriesBurnedInput">Calories burned:</label>
                    <input type="number" name="caloriesBurned" class="form-control" id="typeInput" value="<%=workout.caloriesBurned%>" required>
                </div>
                <div class="form-group">
                    <label for="notesInput">Notes</label>
                    <input class="form-control" name="notes" id="notesInput" value="<%=workout.notes%>"></input>
                </div>
                <a href="/workouts/<%=workout.id%>">
                    <button type="button" class="btn">Cancel Changes</button>
                </a>
                <input type="submit" value="Save Changes" class="btn btn-success"/>
            </form>
        </div>
    </div>
    <%- include ('./partials/footer.ejs') %>
</body>
</html>